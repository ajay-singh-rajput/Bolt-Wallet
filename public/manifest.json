{
  "manifest_version": 3,
  "name": "Solana Wallet",
  "version": "1.0",
  "description": "A Solana wallet extension",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "icons": {
    "16": "bolt-logo16.png",
    "48": "bolt-logo48.png",
    "128": "bolt-logo128.png"
  }
}
